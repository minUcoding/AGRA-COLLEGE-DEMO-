  }
  
  /* Text Wrapper */
  .text-wrapper {
    flex: 2; 
  }
  
  /* Paragraph Styles */
  .text-wrapper p {
    font-size: 1rem; 
    line-height: 1.6; 
    color: #5d0404;
    margin-bottom: 20px; 
  }
  
  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .content-wrapper {
      flex-direction: column; 
      align-items: center; 
    }
  
    .images-wrapper {
      margin-right: 0;
      margin-bottom: 20px; 
    }
  
    .text-wrapper {
      text-align: center; 
    }
  }
  
